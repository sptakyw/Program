#include<iostream>
#include<string>
#include<iomanip>
using namespace std;
int main()
{
	int num[4] ;
	string Name[4] ;
	float total = 0 ;
		for(int i=0;i<4;i++)
			{
				cout << "Enter Name ["<< i <<"]:" ;
				cin >> Name[i] ;
				cout << "Enter num ["<< i <<"]:" ;
				cin >> num[i] ;
				total += num[i] ;
			}
		 
	for(int i=0;i<4;i++)

		cout << Name[i] << "\t\t" << num[i] << endl;
		cout << " -------------------------------- " <<endl;
		cout << "Average score = " << fixed << setprecision(2) << total/4 << endl;
	return (0) ;
}
