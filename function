*/ สิ่งที่พิมพ์เข้าไปเป็นตัวอักษรหรือตัวเลข /*
#include <iostream>
#include <iomanip>
using namespace std;
int main()
{

		char str1[30],str2[30] ;
		cout << "Enter string 1 :";
			cin >> str1 ;
		cout << "Enter string 2 " ;
			cin >> str2 ;
		cout << strcat(str1,str2) << endl ;
		cout << str1 << endl;
		cout <<"length = " << strlen(str1) << endl;
		cout << str1[1] << str1[7] << " 7 " << str1[7-1] << endl ;


		for(int i=0 ; i <= strlen(str1)-1 ; i++)
		{
			cout << str1[i] ;


			if (isalpha(str1[i]))
			{
				cout << " <<-- hear is character. " << endl ;
			}
			else
			{
				cout << " <<-- hear is numeric. " << endl ;
			}
		}
}
